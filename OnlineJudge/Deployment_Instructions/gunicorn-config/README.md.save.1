pip3 install gunicorn
cd /home/ubuntu/Online-Judge-Project/OnlineJudge/; gunicorn --reload --daemon --workers 3 --bind unix:/home/ubuntu/Online-Judge-Project/OnlineJudge/OnlineJudge.sock OnlineJudge.wsgi
